{
  "name": "mickaelzhang/wp-boilerplate",
  "description": "Boilerplate for WordPress project",
  "type":"wordpress",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "minimum-stability" : "stable",
  "require": {
    "php": ">=5.5.0",
    "composer/installers" : "~1.0",
    "johnpbloch/wordpress": "^4.6",
    "vlucas/phpdotenv": "^2.0",
    "timber/timber": "1.1.7.1",
    "wpackagist-plugin/wp-migrate-db": "^0.8.0",
    "oscarotero/env": "^1.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^3.1",
    "wpackagist-plugin/duplicate-post": "^3.0",
    "wpackagist-plugin/force-regenerate-thumbnails": "^2.0"
  },
  "extra": {
    "wordpress-install-dir": "core",
    "installer-paths" : {
			"web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "ressources/themes/starter-theme/app/"
    }
  },
  "scripts": {
    "setenv": [
      "cp bootstrap/.env.example .env"
    ],
		"generate-salt": [
			"php bootstrap/env.php"
		]
  }
}
